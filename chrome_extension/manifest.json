{
  "manifest_version": 3,
  "name": "Catalyst - Whisper Coach",
  "version": "1.0.0",
  "description": "AI-powered relationship coaching that analyzes your conversations and provides real-time insights to improve communication.",
  "permissions": ["activeTab", "storage", "background", "scripting"],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://www.messenger.com/*",
    "https://discord.com/*",
    "https://slack.com/*",
    "https://teams.microsoft.com/*",
    "https://telegram.org/*",
    "https://*.instagram.com/*",
    "https://*.facebook.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://www.messenger.com/*",
        "https://discord.com/*",
        "https://slack.com/*",
        "https://teams.microsoft.com/*",
        "https://telegram.org/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["content_styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "login.html",
    "default_title": "Catalyst - Relationship Intelligence",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["catalyst-widget.js", "catalyst-styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html",
  "minimum_chrome_version": "88"
}
